.large-10.columns.large-centered
	%h1.fancy Send a gift to #{@wedding.couple_name}
	=	form_for @payment do |f|
		.row
			.large-6.columns
				%label Full Name
				= f.text_field(:fullname, placeholder: 'John Smith', :required => 'true' )
			.large-6.columns
				%label Email
				= f.email_field(:email, placeholder: 'john@example.com', :required => 'true')
		.row	
			.large-5.columns
				%label Address
				=f.text_field(:address_one)	
			.large-3.columns
				%label City
				=f.text_field(:city)	
			.large-1.columns
				%label State
				=f.text_field(:state)	
			.large-3.columns
				%label Postal Code
				=f.text_field(:postal_code)	
		.row
			.large-3.columns
				%label Gift Amount
				.row.collapse
					.small-1.large-4.columns
						%span.prefix $
					.small-3.large-8.columns
						= f.text_field(:amount, placeholder: '20.00', :required => 'true')
			.large-4.small-3.columns
				%label Card Number
				%input{:type => "text", :name => "card_number", :required => 'true'}
			.large-2.small-3.columns
				%label CCV
				%input{:type => "text", :name => "security_code", :required => 'true'}
			.large-1.small-3.columns
				%label Month
				= f.select(:card_expiration_month, ["01", "02", "03", "04", "05", '06', '07','08','09', '10', '11', '12'], :required => 'true', )
			.large-2.small-3.columns
				%label Year
				= f.select(:card_expiration_year, (2013..2025).to_a, :required => 'true')	
		.row	
			.large-12.columns	
				= f.submit 'Continue', :class => 'button right'
			.large-12.columns	
				%h6.subheader Payment processing provided by Crowdtilt




