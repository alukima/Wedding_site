%h1 Wedding Settings
%fieldset
	= form_for @wedding do |f|		
		=f.text_field  :name
		=f.text_field  :tag_line
		=f.date_field  :date
		=f.text_field  :venue_name
		=f.text_field  :venue_photo
		=f.text_area :directions
		=f.text_area :about_us
		=f.text_area :general_info
		=f.text_area :about_him
		=f.text_area :about_her
		=f.text_field  :address
		=f.text_field  :city
		=f.text_field  :state
		=f.text_field  :zip_code
		=f.submit :submit